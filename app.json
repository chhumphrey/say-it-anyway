{
  "expo": {
    "name": "Say It Anyway: Grief Journal",
    "slug": "Say It Anyway: Grief Journal",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/db734c9f-ab3a-4e5b-9326-6948ee2ad89f.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/db734c9f-ab3a-4e5b-9326-6948ee2ad89f.png",
      "resizeMode": "contain",
      "backgroundColor": "#8BA5C8"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chumphrey.sayitanywaygj",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "This app needs access to your microphone to record audio messages for your loved ones.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select photos for recipient profiles.",
        "NSCameraUsageDescription": "This app needs access to your camera to take photos for recipient profiles."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/db734c9f-ab3a-4e5b-9326-6948ee2ad89f.png",
        "backgroundColor": "#8BA5C8"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.chumphrey.sayitanywaygj",
      "versionCode": 1,
      "permissions": [
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/images/db734c9f-ab3a-4e5b-9326-6948ee2ad89f.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      [
        "expo-audio",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone to record audio messages for your loved ones."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow $(PRODUCT_NAME) to access your photo library to select photos for recipient profiles.",
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera to take photos for recipient profiles."
        }
      ]
    ],
    "scheme": "sayitanywaygj",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  },
  "scheme": "Say It Anyway: Grief Journal"
}